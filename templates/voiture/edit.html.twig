{% extends 'base.html.twig' %}

{% block title %}Modifier une voiture{% endblock %}

{% block body %}
    <h1>Modifier une voiture</h1>

    {{ form_start(form) }}
    {{ form_row(form.marque) }}
    {{ form_row(form.modele) }}
    {{ form_row(form.prix) }}
    {{ form_row(form.kilometrage) }}
    <!-- Ajouter d'autres champs de formulaire pour les autres propriétés de la voiture -->
    <button type="submit">Modifier</button>
    {{ form_end(form) }}
{% endblock %}
